<!DOCTYPE html>
<html>
<head>
  <title>Blog Home</title>
  <link href="..\styling\upmake.css" type="text/css" rel="stylesheet">
</head>
<body>
  <h1>All Posts</h1>
  <a href="/blogs/new">Create New Post</a><br>
  <div id="posts-container">
    <% posts.forEach(post => { %>
      <div data-category="<%= post.categories %>">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p>Posted on: <%= post.created_at %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
